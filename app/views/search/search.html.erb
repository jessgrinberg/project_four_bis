<h1>Map Search</h1>
 
<%= form_for search_path, method: :get do |f| %>
  <p>
    <%= f.label "Search for" %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag "Go", name: nil %>
  </p>
<% end %>
 
<ul>
  <% @maps.each do |map| %>
    <li>
      <h3>
        <%= link_to map_path(map), controller: "maps", action: "show", id: map.id%>
      </h3>
    </li>
  <% end %>
</ul>