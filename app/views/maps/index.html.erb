        <p class="col-sm-1"><%= link_to 'Details', map %></p>
       <p class="col-sm-1"><%= link_to 'Edit', edit_map_path(map) %></p>
        <p class="col-sm-1"><%= link_to 'Destroy', map, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    <% end %>

